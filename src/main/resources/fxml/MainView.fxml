<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.webscanner.MainController" spacing="15" padding="20">
    <!-- Header -->
    <Label text="Web Application Vulnerability Scanner" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    
    <!-- URL Input Section -->
    <Label text="Enter URL:" />
    <TextField fx:id="urlTextField" promptText="http://example.com" prefWidth="400" />

    <!-- Submit Button -->
    <Button fx:id="submitButton" text="Submit" prefWidth="120" />

    <!-- Status Message -->
    <Label fx:id="statusLabel" text="Status: Awaiting input..." style="-fx-text-fill: #333333;" />
</VBox>
